  <h1>My Tasks</h1>



<i class="fa-solid fa-plus"><%= link_to 'add a new task' ,tasks_new_path(@task)%>
</i>

  <% @tasks.each do |task| %>
    <li style="list-style-type:none;"><%= link_to task.title, task_path(task)%>

<%= link_to ("<i class='fa-regular fa-trash-can'></i>").html_safe,
  task_path(task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}

%>



</li>
  <% end %>
